<Window x:Class="Playthrough.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playthrough"
        mc:Ignorable="d"
        Title="Playthrough" Height="450" Width="800">
    <Grid>
        <Button x:Name="BtStart" Content="Start" HorizontalAlignment="Left" Margin="10,-40,0,0" VerticalAlignment="Center" Width="75" Click="BtStart_Click"/>
        <Button x:Name="BtStop" Content="Stop" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Center" Width="75"/>
        <ProgressBar x:Name="pp" HorizontalAlignment="Left" Height="20" Margin="150,0,0,0" VerticalAlignment="Center" Width="100" Orientation="Horizontal"/>

    </Grid>
</Window>
